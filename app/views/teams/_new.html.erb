
<%= simple_form_for(team) do |f| %>
  <div class="mb-3 form-control">
    <%= f.input :name, input_html: { class:"form-control bg-white"} %>
  </div>
  <div class="mb-3 form-control">
  <%= f.input :location,
        input_html: {data: {address_autocomplete_target: "location"}, class: "d-none"},
        wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}%>
  </div>
  <div class="mb-3 form-control">
    <%= f.input :photo, as: :file, input_html: { class:"form-control"} %>
  </div>
    <%= f.submit 'Add Team', class: "btn btn-default btn-danger"%>
<% end %>
