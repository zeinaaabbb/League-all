
<!-- Button trigger modal -->
<button type="button" class="btn btn-succes" data-bs-toggle="modal" data-bs-target="#<%= dom_id(team) %>">
  edit
</button>

<!-- Modal -->
<div class="modal fade" id=<%= dom_id(team) %> tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editModalLabel">Edit your league</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">

      <!---content of modal ---->

    <%= simple_form_for(team) do |f| %>
      <div class="mb-3 form-control">
        <%= f.input :name, input_html: { class:"form-control bg-white"} %>
      </div>
      <div class="mb-3 form-control">
        <%= f.input :photo, as: :file, input_html: { class:"form-control"} %>
      </div>
        <%= f.submit 'Update Team', class: "btn btn-default btn-danger"%>
      <% end %>
      <!---end content of modal---->

      </div>
    </div>
  </div>
</div>
