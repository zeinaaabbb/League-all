<div class="row" id="dashboard">
  <div>
    <%= render "shared/sidebar", league: nil %>
  </div>
  <div class="column" style="padding: 0px; grid-template-columns: 5fr;">
    <div>
      <%= render "shared/navbar" %>
    </div>
    <div id="dashboard-content" style="padding:20px">
      <h1>Your Leagues</h1>
      <%= link_to "Create Your League",new_league_path, class: "btn btn-main btn-primary" %>
    </div>



      <h1>Your Teams</h1>
        <div class="d-flex flex-row" >
              <% @user.teams.each do |team| %>
                <div class="card text-bg-primary mb-3 border-0 mx-4" class="custom-card" style="width: 18rem; height: 12rem;">
                  <div class="card-body" >
                    <h5 class="card-title"><%= team.name %></h5>
                    <a href="#" class="stretched-link"></a>
                  </div>
                </div>
              <% end  %>
            <%= render "teams/team_form" %>
        </div>
      </div>
    </div>
  </div>
</div>
