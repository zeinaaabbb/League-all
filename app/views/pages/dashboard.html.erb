<div class="row" id="dashboard">
  <div>
    <%= render "shared/sidebar", league: nil, team: nil %>
  </div>
  <div class="column" style="padding: 0px; grid-template-columns: 5fr;">
    <div>
      <%= render "shared/navbar" %>
    </div>
    <div id="dashboard-content" style="padding:20px">
      <div class="tab-content" id="v-pills-tabContent">
        <div class="tab-pane fade <%= 'show active' if @selected_tab == "leagues" %>" id="v-pills-leagues" role="tabpanel" aria-labelledby="v-pills-leagues-tab">
          <%= render "leagues" %>
        </div>
        <div class="tab-pane fade <%= 'show active' if @selected_tab == "teams" %>" id="v-pills-teams" role="tabpanel" aria-labelledby="v-pills-teams-tab">
          <%= render "teams" %>
        </div>
        <div class="tab-pane fade <%= 'show active' if @selected_tab == "following" %>" id="v-pills-following" role="tabpanel" aria-labelledby="v-pills-following-tab">
          <%= render "following" %>
        </div>
        <div class="tab-pane fade <%= 'show active' if @selected_tab == "browse" %>" id="v-pills-browse" role="tabpanel" aria-labelledby="v-pills-browse-tab">
          <%= render "browse" %>
        </div>
      </div>
    </div>
  </div>
</div>
