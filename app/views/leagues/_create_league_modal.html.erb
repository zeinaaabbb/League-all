<div class="card text-bg-warning mx-4 border-0" class="custom-card" style="width: 18rem; height: 12rem;">
  <div class="card-body row text-center h-100" >
    <h5 class="card-title align-items-center d-flex justify-content-center">add a league</h5>
    <p class="card-text align-items-center d-flex justify-content-center"><i class="fa-solid fa-plus fa-2xl" style="color: #000000;"></i></p>
    <a data-bs-toggle="modal" data-bs-target="#Modal" class="stretched-link"></a>
  </div>
</div>
<!-- Modal -->
<div class="modal fade" id="Modal" tabindex="-1" aria-labelledby="ModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="ModalLabel">add a league</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
      <! -- START: create league form -- >
        <%= render "leagues/new", league: @league %>
      <! -- END: create league form -- >
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
